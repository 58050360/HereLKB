<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="65dp"
    app:cardBackgroundColor="#EEEEEE"
    android:outlineAmbientShadowColor="#D81A1A"
    android:outlineSpotShadowColor="#0F13EE"
    app:cardElevation="10dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp">


        <TextView
            android:id="@+id/name"
            android:layout_width="90dp"
            android:layout_height="52dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:text="My Name"
            android:textColor="@color/back"
            android:textSize="15sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/date"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/name"
            android:text="My date"
            android:textColor="@color/back"
            android:textSize="13sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/status"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/date"
            android:text="My Status"
            android:textColor="@color/back"
            android:textSize="13sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/status"
            android:gravity="center"
            android:text="My category"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/category"
            android:gravity="center"
            android:text="My address"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:typeface="monospace" />
        <TextView
            android:id="@+id/open"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/address"
            android:gravity="center"
            android:text="My open"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:typeface="monospace" />
        <TextView
            android:id="@+id/tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/open"
            android:gravity="center"
            android:text="My tel"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:typeface="monospace" />
        <TextView
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/tel"
            android:gravity="center"
            android:text="My detail"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:typeface="monospace" />
        <TextView
            android:id="@+id/latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/detail"
            android:gravity="center"
            android:text="My latitude"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:typeface="monospace" />
        <TextView
            android:id="@+id/longtitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/latitude"
            android:gravity="center"
            android:text="My longtitude"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:typeface="monospace" />
        <TextView
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/longtitude"
            android:gravity="center"
            android:text="My user"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:typeface="monospace" />


    </RelativeLayout>

</android.support.v7.widget.CardView>