<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".FoodActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar" />


    <TextView
        android:id="@+id/txt_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="Select Admin Menu"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:textStyle="normal"
        android:typeface="monospace" />


    <Button
        android:id="@+id/button_prlist"
        android:layout_width="180dp"
        android:layout_height="49dp"
        android:layout_below="@id/txt_search"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/shape_layout3"
        android:drawableLeft="@drawable/ic_action_prlist"
        android:paddingLeft="30dp"
        android:text="PR List"
        android:textColor="#FFFFFF"
        android:textStyle="normal|bold"
        android:typeface="monospace"
        app:srcCompat="@drawable/ic_action_restaurants"
        tools:textSize="18sp" />

    <Button
        android:id="@+id/button_approvelist"
        android:layout_width="180dp"
        android:layout_height="49dp"
        android:layout_below="@id/txt_search"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="10dp"
        android:text="Add List"
        android:layout_toEndOf="@id/button_prlist"
        android:background="@drawable/shape_layout2"
        android:textColor="#FFFFFF"
        android:drawableLeft="@drawable/ic_action_pradd"
        android:drawablePadding="-10dp"
        android:paddingLeft="30dp"
        android:textStyle="normal|bold"
        android:typeface="monospace"
        app:srcCompat="@drawable/ic_action_cafe"
        tools:textSize="18sp" />



    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleview"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@id/button_prlist"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        tools:itemCount="10"
        ></android.support.v7.widget.RecyclerView>

</RelativeLayout>
