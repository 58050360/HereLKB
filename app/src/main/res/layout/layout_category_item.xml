<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="75dp"
    android:outlineAmbientShadowColor="#D81A1A"
    android:outlineSpotShadowColor="#0F13EE"
    app:cardBackgroundColor="#EEEEEE"
    app:cardElevation="10dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp">


        <ImageView
            android:id="@+id/image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="6dp"
            app:srcCompat="@drawable/shape_layout" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            app:srcCompat="@drawable/shape_layout" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            app:srcCompat="@drawable/shape_layout" />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            app:srcCompat="@drawable/shape_layout" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/image"
            android:gravity="center"
            android:text="My Name"
            android:textColor="@color/back"
            android:textSize="15sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/name"
            android:gravity="center"
            android:text="My detail"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/locateaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/detail"
            android:gravity="center"
            android:text="My address"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/locatetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/locateaddress"
            android:gravity="center"
            android:text="My time"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/locatetel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/locatetime"
            android:gravity="center"
            android:text="My tel"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/locatecategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/locatetel"
            android:gravity="center"
            android:text="My category"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/locateLatitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/locatecategory"
            android:gravity="center"
            android:text="My Latitude"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:typeface="monospace" />


        <TextView
            android:id="@+id/locateLong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/locateLatitude"
            android:gravity="center"
            android:text="My Latitude"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:typeface="monospace" />

    </RelativeLayout>

</android.support.v7.widget.CardView>