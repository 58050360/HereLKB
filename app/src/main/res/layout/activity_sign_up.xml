<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".SignUpActivity">


    <ImageView
        android:id="@+id/iconapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/desc"
        android:src="@drawable/ic_here" />

    <TextView
        android:id="@+id/txt_em"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_signemail"
        android:layout_alignParentStart="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="-24dp"
        android:text="E-mail"
        android:textColor="#FFFFFF"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/txt_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_signemail"
        android:layout_alignParentStart="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="60dp"
        android:text="Password"
        android:textColor="#FFFFFF"
        android:textStyle="normal" />

    <EditText

        android:id="@+id/txt_signemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iconapp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:hint="your e-mail"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:textColor="#FFFFFF"
        tools:textSize="18sp" />

    <EditText
        android:id="@+id/txt_signpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_signemail"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint=" your password"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/gosignup_action"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_signpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="@color/colorbutton1"
        android:text="Sign UP"
        android:textColor="#FFFFFF"
        android:textStyle="normal|bold"
        tools:textSize="18sp" />

    <Button
        android:id="@+id/gologin_action"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gosignup_action"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="@color/colorbutton2"
        android:text="Already have an Account ? Log In"
        android:textColor="#FFFFFF"
        android:textStyle="normal|bold"
        tools:textSize="18sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />
</RelativeLayout>